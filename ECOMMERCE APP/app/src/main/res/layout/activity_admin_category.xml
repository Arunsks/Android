<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/Slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="27dp"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:id="@+id/Linear_Layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Slogan_category"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

       <ImageView

           android:id="@+id/t_shirts"
           android:layout_width="80dp"
           android:layout_height="70dp"
           android:src="@drawable/tshirts"
           android:layout_marginLeft="10dp"/>


        <ImageView

            android:id="@+id/sports_t_shirts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sports"
            android:layout_marginLeft="10dp"/>

        <ImageView

            android:id="@+id/female_dress"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/female_dresses"
            android:layout_marginLeft="10dp"/>

        <ImageView

            android:id="@+id/sweather"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sweather"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/Linear_Layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Linear_Layout1"
        android:layout_marginTop="30dp">

        <ImageView

            android:id="@+id/glasses"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/glasses"
            android:layout_marginLeft="10dp"/>


        <ImageView

            android:id="@+id/bags"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/purses_bags"
            android:layout_marginLeft="10dp"/>

        <ImageView

            android:id="@+id/hats"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hats"
            android:layout_marginLeft="10dp"/>

        <ImageView

            android:id="@+id/shoes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/shoess"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>

    <LinearLayout

        android:id="@+id/Linear_Layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Linear_Layout2"
        android:layout_marginTop="30dp">

        <ImageView

            android:id="@+id/headphone"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/headphoness"
            android:layout_marginLeft="10dp"/>


        <ImageView

            android:id="@+id/laptop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/laptops"
            android:layout_marginLeft="10dp"/>

        <ImageView

            android:id="@+id/watches"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/watches"
            android:layout_marginLeft="10dp"/>

        <ImageView

            android:id="@+id/mobiles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mobiles"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>


</RelativeLayout>